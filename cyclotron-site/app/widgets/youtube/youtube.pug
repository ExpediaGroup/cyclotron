.youtube-widget(ng-controller='YoutubeWidget')
    h1.title(ng-if='::widget.title') {{ widgetTitle() }}

    .widget-body
        iframe(ng-src='{{ getUrl() }}',
            type="text/html"
            frameborder='0', 
            marginheight='0', 
            marginwidth='0', 
            width='100%', 
            height='100%')

